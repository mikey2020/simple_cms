<% @page_title = "Edit Section" %>
<%= link_to(" Go Back to List",sections_path,:class => 'back-link') %>

<div class="subjects new">
	<h1>Create new Section</h1>
	<%= form_for(@section) do |f| %>

	<table summary="Section form fields">
		<h3>Fill form below</h3><br/>

		<tr>
			<th>Name</th>
			<td><%= f.text_field(:name)%></td>
        </tr>
        <tr>
        	<th>Position</th>
        	<td><%= f.text_field(:position)%></td>
        </tr>
        <tr>
        	<th>Visible</th>	'
        	<td><%= f.text_field(:visible)%></td>
        </tr>
        <tr>
        	<th>Page Id</th>	'
        	<td><%= f.text_field(:page_id)%></td>
        </tr>
        <tr>
        	<th>Content Type</th>	'
        	<td><%= f.text_field(:content_type)%></td>
        </tr>
        <tr>
        	<th>Content</th>	'
        	<td><%= f.text_field(:content)%></td>
        </tr>
    </table>    

    <div class="form-buttons">
    	<%= f.submit("Update Section ")%>
    </div>
    <% end %>
</div>    	