<% @page_title = "#{@page.name}" %>
<%= link_to("List",pages_path,:class => 'back-link') %>

<div class = "page show">
	<h1>Page Show</h1>

	<table summary ="Page detail view">
		<tr>
			<th>Name</th>
			<td><%=@page.name%></td>
		</tr>
		
		<tr>
			<th>Position</th>	
			<td><%=@page.position%></td>
		</tr>
		
		<tr>
			<th>Visible?</th>
			<td><%=@page.visible ?	'true' : 'false'%></td>
		</tr>
		
		<tr>
			<th>Subject_id</th>
			<td><%=@page.subject_id%></td>
		</tr>
		<tr>
			<th>Permalink</th>
			<td><%=@page.permalink%></td>
		</tr>
			
		<tr>
			<th>Time created</th>	
			<td><%=@page.created_at%></td>
		</tr>
		
		<tr>
			<th>Recent Update</th>	
			<td><%=@page.updated_at%></td>
		</tr>
	</table>
</div>		
 