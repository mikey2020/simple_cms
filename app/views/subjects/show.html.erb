
<%= link_to("List",subjects_path,:class => 'back-link') %>

<div class = "subject show">
	<h1>Subject Show</h1>

	<table summary ="Subject detail view">
		<tr>
			<th>Name</th>
			<td><%=@subject.name%></td>
		</tr>
		
		<tr>
			<th>Position</th>	
			<td><%=@subject.position%></td>
		</tr>
		
		<tr>
			<th>Visible?</th>
			<td><%=@subject.visible ?	'true' : 'false'%></td>
		</tr>
		
		<tr>
			<th>Time created</th>	
			<td><%=@subject.created_at%></td>
		</tr>
		
		<tr>
			<th>Recent Update</th>	
			<td><%=@subject.updated_at%></td>
		</tr>
	</table>
</div>		
 