<% @page_title = "Delete #{@subject.name}" %>
<%= link_to("Go back to list",subjects_path,:class => 'back-link')%>
	<div class="subjects delete">
		<h2>Subject delete</h2>

		<%= form_for(@subject, :method => 'delete')  do |f| %>

		<p>Are sure you want to delete?</p> 

		<p class="reference-name"><%=f.object.name%></p>

		<div class="form-buttons">
			<%=f.submit("Delete Subject")%>
		</div>
		
		<% end %>	

	</div>	
